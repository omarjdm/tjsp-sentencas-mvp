# Playwright - browsers no projeto (necessário para Apple Silicon / Cursor)
PLAYWRIGHT_BROWSERS_PATH=.playwright

# TJSP CJPG - URL da página de consulta
TJSP_CJPG_URL=

# Período de julgamento (formato esperado pela página, ex: DD/MM/YYYY)
DATE_FROM=
DATE_TO=

# Nome do magistrado para filtrar
JUIZ=

# Opcional: modo headless e slowMo para debug
HEADLESS=false
SLOW_MO_MS=0

# Limite de resultados (opcional)
MAX_RESULTS=30

# SQLite - caminho do banco de dados
DB_PATH=./data/sentencas.db
